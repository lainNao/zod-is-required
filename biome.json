{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "files": {
    "ignoreUnknown": true,
    "maxSize": 262144,
    "includes": ["**/*", "!!**/dist", "!!**/node_modules"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "complexity": {
        "noUselessSwitchCase": "off"
      }
    }
  }
}
